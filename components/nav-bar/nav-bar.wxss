/* components/nav-bar/nav-bar.wxss */
.status{
  height: 40px;
}

.nav{
  display: flex;
  height: 44px;
  color: #ffffff;
}
.left,.center,.right{
  display: flex;
  justify-content: center;
  align-self: center;
}
.nav .left, .nav .right{
  width: 120rpx;
}
.nav .center{
  flex: 1;
}

.defalut{
  display: none;
}

.slot:empty +.defalut{
  display: flex;
}

.image{
  width: 40rpx;
  height: 40rpx;
}