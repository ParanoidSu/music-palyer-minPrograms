<!--components/song-item-v2/song-item-v2.wxml-->
<view class="item" bindtap="onSongItemTap">
  <view class="index">{{index}}</view>
  <view class="info">
    <view class="title">{{itemData.name}}</view>
    <view class="source">
      <image class="image" src="../../assets/images/icons/sq_icon.png" mode="widthFix"/>
      <text class="name">{{itemData.ar[0].name}}</text>
    </view>
  </view>
  <view class="album">
    <image class="album-image" src="{{itemData.al.picUrl}}" mode="widthFix"/>
  </view>
</view>
