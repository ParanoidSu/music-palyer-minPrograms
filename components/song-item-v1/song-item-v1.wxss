/* components/song-item-v1/song-item-v1.wxss */
.song-item{
  display: flex;
  padding: 16rpx 0;
  align-items: center;
}
.song-item .image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
}
.song-item .info{
  margin-left: 16rpx;
  flex: 1;
}
.song-item .info .name{
  font-size: 32rpx;
  color: #555;
}
.song-item .info .singer{
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #999;
}
.arrow{
  color: #999;
}